@model List<Book>

<div class="row">
    @foreach(var eachBook in Model)
    {
        <div class="card col-3 m-2 p-2 border-2 shadow border-rounded text-center">

            <img class="card-img-top" src="@eachBook.ImgUrl"/>

            <div class="card-body">

                <h3 class="card-title">@eachBook.BookTitle</h3>

                <p class="card-text">

                    <br />
                    @eachBook.Author
                    <br />

                    @eachBook.Price
                    <br />

                    @eachBook.category.Name


                    <a asp-controller="Home" asp-action="Details" asp-route-id="@eachBook.BookId" class="btn btn-primary">Details</a>

                </p>
                


            </div>

            
        
        </div>

    }


</div>